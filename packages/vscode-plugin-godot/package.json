{
  "name": "zyi-godot",
  "version": "0.0.1",
  "private": true,
  "displayName": "Zyi Godot Toolkit",
  "publisher": "zyi",
  "description": "Vscode plugin for godot",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "scripts": {
    "dev-client": "vite",
    "stub": "unbuild --stub",
    "build-only": "cross-env IS_BUILD=true unbuild",
    "build-toolkit": "cd ../toolkit && pnpm build",
    "stub-toolkit": "cd ../toolkit && pnpm stub",
    "build": "run-s build-toolkit build-only stub-toolkit",
    "vsce-pack-only": "vsce package --no-git-tag-version --no-dependencies --skip-license --allow-star-activation --allow-missing-repository",
    "vsce-pack": "run-s build vsce-pack-only stub",
    "rts": "node --require esbuild-register"
  },
  "devDependencies": {
    "@vueuse/core": "^10.4.1",
    "@zyi/toolkit": "workspace:*",
    "execa": "^8.0.1",
    "vscode-nls": "^5.2.0",
    "vue": "^3.3.4",
    "@types/vscode": "^1.0.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.47",
    "typescript": "^5.2.2",
    "vite": "5.0.0-beta.17",
    "vscode-nls-dev": "^4.0.4",
    "yaml-eslint-parser": "^1.2.2"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "activationEvents": [
    "*"
  ],
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%ext.config.title.configuration%",
      "properties": {
        "zyi-godot.formatters": {
          "type": "array",
          "default": [
            {
              "selectors": [
                "gdscript"
              ],
              "stdoutAsResult": true,
              "commands": [
                "python",
                "-c",
                "import sys;import io; from gdtoolkit.formatter import format_code;sys.stdout = io.TextIOWrapper(sys.stdout.buffer, encoding='utf-8');formatted_code = format_code('''{content}''', 100);print(formatted_code)"
              ]
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "selectors": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "markdownDescription": "%ext.config.markdownDescription.formatterSelectors%"
              },
              "stdoutAsResult": {
                "type": "boolean",
                "default": true,
                "markdownDescription": "%ext.config.markdownDescription.formatterStdoutAsResult%"
              },
              "commands": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "markdownDescription": "%ext.config.markdownDescription.formatterCommands%"
              }
            }
          },
          "markdownDescription": "%ext.config.markdownDescription.formatters%",
          "scope": "window"
        }
      }
    }
  },
  "commands": [
    {
      "command": "zyi-godot.forceFormatDocument",
      "title": "%ext.command.title.forceFormatDocument%",
      "when": "editorFocus"
    }
  ]
}
