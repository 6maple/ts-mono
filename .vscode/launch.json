{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-plugin-godot"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-plugin-godot/dist/**/*.cjs",
        "${workspaceFolder}/packages/vscode-plugin-godot/dist/**/*.js"
      ]
    },
    {
      "name": "Run Extension (Disable Other Extensions)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-plugin-godot"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-plugin-godot/dist/**/*.cjs",
        "${workspaceFolder}/packages/vscode-plugin-godot/dist/**/*.js"
      ]
    }
  ]
}
