{
  "extends": "../../tsconfig.web-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
